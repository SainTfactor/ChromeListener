{
  "manifest_version": 2,

  "name": "Chrome Talk",
  "description": "This extension lets you talk to chome",
  "version": "1.0",

  "permissions": [
    "webNavigation", 
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ],
    
  "content_scripts": [
    {
      "matches": ["https://*/*"],  
      "js": ["annyang.js", "interpreter.js"]
    }
  ],
    
//  "background": {
//     "page": "background.html",
//     "persistent": true
//  },
    
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Listen to my voice"
  }
}